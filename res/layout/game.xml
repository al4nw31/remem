<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/title_screen3"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/buttonblue2"
        android:layout_width="137dp"
        android:layout_height="137dp"
        android:layout_above="@+id/buttonblue"
        android:layout_alignLeft="@+id/buttonblue"
        android:scaleType="fitStart"
        android:src="@drawable/blue_button2" />

    <ImageView
        android:id="@+id/buttonblue3"
        android:layout_width="137dp"
        android:layout_height="137dp"
        android:layout_alignLeft="@+id/buttonblue"
        android:layout_alignParentBottom="true"
        android:scaleType="fitStart"
        android:src="@drawable/blue_button2" />

    <ImageView
        android:id="@+id/buttonblue"
        android:layout_width="137dp"
        android:layout_height="137dp"
        android:layout_above="@+id/buttonblue3"
        android:layout_centerHorizontal="true"
        android:scaleType="fitStart"
        android:src="@drawable/green_button" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="19dp"
        android:text="Level 7"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#C1CDCD" />

</RelativeLayout>